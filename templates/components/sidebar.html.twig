                <div class="nav">
                    <div class="sb-sidenav-menu-heading">Article</div>
                    <a class="nav-link" href="{{ path('article_create') }}">
                        <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                        Create an article 
                        <div class="small">Access Restricted</div>
                    </a>
